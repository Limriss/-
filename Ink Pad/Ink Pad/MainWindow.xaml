<Window x:Class="Ink_Pad.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Ink_Pad"
        mc:Ignorable="d"
        Title="Ink Pad" Height="550" Width="370" Background="LightGray">
    <Grid>
        <InkCanvas x:Name="inkCanvas1" Background=" LightYellow"/>
        <Button Content="Clear" HorizontalAlignment="Left" Height="20" VerticalAlignment="Top" Width="40" Click="Button_Click"/>
        <Button Content="Close" HorizontalAlignment="Right" Height="20" VerticalAlignment="Top" Width="40" Click="Button_Click_1"/>
    </Grid>
</Window>
