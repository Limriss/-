<Window x:Class="WpfRoutedEvent_2_2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfRoutedEvent_2_2"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <StackPanel ButtonBase.Click="StackPanel_Click" HorizontalAlignment="Left" Height="100" Margin="130,160,0,0" VerticalAlignment="Top" Width="100">
            <Button x:Name="butAdd" Content="Button"/>
            <Button x:Name="butMult" Content="Button"/>
        </StackPanel>
        <TextBox x:Name="txtBox" HorizontalAlignment="Left" Height="23" Margin="130,80,0,0" TextWrapping="Wrap" Text="1" VerticalAlignment="Top" Width="120"/>

    </Grid>
</Window>
